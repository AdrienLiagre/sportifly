<div class="container">
  <div class="col-xs-12 col-sm-6">
    <div class='row text-center'>
      <div class='box-header-dash'>
       <h2> Ton profil </h2>
      </div>

      <%= user_picture(@user) %>
    <br>
    <div class='row box-header-dash'>
      <div class='col-xs-6 col-xs-offset-3'>
          <ul>
            <li><% if @user.name %><%= @user.name %>
                <% else %> <%= @user.email %>
                <% end %></li>
            <li> Team: <%= @user.group.name %> </li>
            <li><%= @user.age %> ans </li>
            <li><%= @user.phone_number %></li>
            <%= link_to "Mettre à jour", edit_account_dashboard_users_path, class: "btn btn-mise-a-jour"  %>
          </ul>
      </div>
    </div>
  </div>
  </div>

  <div class="col-xs-12 col-sm-6">
    <div class='box-header-dash text-center' >
      <h2> Tes statistiques </h2>
    </div>
    <div class='box-header-dash' >
    <p> form to update the profil </p>
  </div>
  </div>
</div>

<br>

<div class="container">
    <div class="col-xs-12">

  <div class=' row box-header-dash text-center'>
    <h4> Tes prochaines activités avec la team <%= @user.group.name %> </h4>
  </div>

  <% if @bookings_planned.exists? %>
    <% @bookings_planned.each do |booking| %>
      <div class="container">
        <div class="col-md-6 col-lg-4">
          <ul style="list-style: none;">
            <li><%= booking.activity.date %></li>
            <li> Tu fly avec </li>
            <li><p> <%= link_to 'Détails', group_activity_path(@user.group, booking.activity ) %></li>
            <%= link_to "Annuler",  group_activity_booking_path(@user.group, booking.activity, booking, referral: 'dashboard-page'), method: :delete, class: "btn btn-warning" %>
          </ul>
        </div>
      </div>
    <% end %>
  <% else %>
    <p> Tu n'as pas encore prévu d'activité.</p>
    <p> Créer une activité </p>
    <p> Chercher une activité </p>
  <% end %>

<% if @bookings_passed.exists? %>
    <div class='box-header-dash text-center'>
      <h4> Tes activités passées avec la team <%= @user.group.name %> </h4>
    </div>


    <% @bookings_passed.each do |booking| %>
      <div class="container">
        <div class="col-md-6 col-lg-4">
          <ul style="list-style: none;">
            <li><%= booking.activity.date %></li>
            <li> Tu fly avec </li>
            <li><p> <%= link_to 'Détails', group_activity_path(@user.group, booking.activity ) %></li>
          </ul>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
</div>
