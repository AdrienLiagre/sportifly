<section id="contact" class="no-padding">
  <div style="text-align:center" >
    <br>
    <h3><%= t'contact.title'%></h3>
    <div class="col-xs-4 col-xs-offset-4 col-sm-4 col-sm-offset-4" style="float:none">
      <%= simple_form_for @contact, :html => {:class => 'form-horizontal' }, url: "/contact#contact" do |f| %>
        <br>
        <%= f.input :name, label: t('contact.name'), :required => true %>
        <br>
        <%= f.input :email, :required => true %>
        <br>
        <%= f.input :phone_number, label: t('contact.tel'), :required => true %>
        <br>
        <%= f.input :message, :as => :text, :input_html => {:style=> 'height: 95px'}, :required => true %>
        <div class= "hidden">
          <%= f.input :nickname, :hint => 'Leave this field blank!' %>
        </div>
          </br>
          <%= f.button :submit, t('contact.button'), :class=> "btn btn-primary" %>
        <br>
      </div>
    <% end %>
  </div>
  <div class="container">
    <div style="width: auto;float: left">
      <p class="footer-company-name text-footer">Meetemps &copy; 2017</p>
    </div>
    <div style="float: right">

      <a href="https://twitter.com/Meetemps" target="blank">
        <i class="fa fa-twitter"></i>
      </a>

      <a href="http://facebook.com/Sportifly-926740550696609/?ref=br_rs" target="blank">
        <i class="fa fa-facebook"></i>
      </a>

      <a href="https://www.linkedin.com/company-beta/11191029/" target="blank">
        <i class="fa fa-linkedin"></i>
      </a>

    </div>
  </div>
</section>
