<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h2><%= t('devise.sessions.edit')%></h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :password, label: t('devise.sessions.password'), autocomplete: "off", hint: t('devise.sessions.password_confirmation_hint'), required: false %>
          <%= f.input :password_confirmation, label: t('devise.sessions.password_confirmation'), required: false %>
          <%= f.input :current_password, label: t('devise.sessions.current_password'), hint: t('devise.sessions.current_password_hint'), required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, t('devise.sessions.update_password') %>
        </div>
      <% end %>

      <p><%= t('devise.sessions.unhappy')%> <%= link_to t('devise.sessions.cancel_account'), registration_path(resource_name), data: { confirm: t('devise.sessions.delete_confirm') }, method: :delete %></p>

      <%= link_to t('devise.sessions.back'), :back %>
    </div>
  </div>
</div>
