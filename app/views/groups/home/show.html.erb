<header class="masthead">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 text-left">
        <h1><a href="#" title="Scroll down for your viewing pleasure"><%= @group.name %></a>
          <p class="lead">The best school ever</p>
        </h1>
      </div>
      <div class="col-xs-12 col-sm-6 text-right">

        <div class="well pull-right">
          <%= image_tag @group.picture(:thumb) %>
        </div>
     </div>
    </div>
  </div>
</header>

<!-- Begin Body -->
<div class="container">
  <div class="no-gutter row">
    <div class="col-md-8" id="content">
      <div class="panel">
        <div class="panel-heading text-center" style="background-color:#111;color:#fff;">Prochains sports</div>
        <div class="panel-body">
          <div class="row">

              <% @activities.each do |activity| %>
              <%= link_to group_activity_path(@group, activity) do %>
                <div class="col-sm-12 activity">
                  <div class="row">
                    <div class="col-sm-8 ">
                      <h2><%= activity.sport.name %></h2>
                        <li class="list-group-item list-group-item-info"><%= activity.name %></li>
                          <br>
                            <span class="label label-default text-left"><%= activity.date %></span>
                          <br>
                            <span class="label label-success"><%= activity.open %></span>
                          <br>
                            <%= activity.bookings.count %> / <%= activity.number_of_players %>
                        <% end %>
                          <br>


                            <% if activity.current_user_booked == current_user.id  %>
                            <%= button_to "Je me desinscris", group_activity_booking_path(@group, activity, activity.bookings), method: :delete %>

                            <% elsif activity.full? %>
                            <p>Complet, mais reste la si desistement il y a ! </p>


                            <% else %>
                              <%= button_to "Je m'inscris", group_activity_bookings_path(@group, activity) %>
                            <% end %>

                    </div>
                    <div class="col-sm-4 text-center">
                      <br>
                      <br>
                        <a href="#"><%= image_tag activity.sport.picture(:thumb)%></a>
                    </div>
                    <%= activity.captain.name %>
                  </div>
                </div>
              <% end %>
          </div>
        </div><!--/panel-body-->
      </div><!--/panel-->
      <!--/end right column-->
    </div>
