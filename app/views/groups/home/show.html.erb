<header class="masthead">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4 text-left">
        <h1><a href="#" title="Scroll down for your viewing pleasure"><%= @group.name %></a>
        </h1>
      </div>
      <div class="col-xs-12 col-sm-4 text-center">
        <%= form_tag group_root_path(current_user.group), :method => :get do %>
          <%= text_field_tag :city, params[:city], class: "form-control", placeholder: 'Où veux-tu flyer ?' %>
          <%= submit_tag "Search", class: 'btn' %>
        <% end %>
      </div>
      <div class="col-xs-12 col-sm-4 text-right">
        <div class="well pull-right">
          <%= image_tag @group.picture(:thumb) %>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Begin Body -->
<div class="container">
  <div class="no-gutter row">
    <div class="col-md-8" id="content">
      <div class="panel">
        <div class="panel-heading text-center" style="background-color:#111;color:#fff;">Prochains sports</div>
        <div class="panel-body">
          <div class="row">

              <% @activities.each do |activity| %>
                <% if activity.date > Date.yesterday %>

                  <div class="col-sm-12 activity box-activity">
                    <div class="row" >
                      <div class="col-sm-8" >
                        <%= link_to group_activity_path(@group, activity) do %>
                          <h2><%= activity.sport.name %></h2>
                            <%= activity.name %>
                            <br>
                            <%= activity.date %>
                            <br>
                            <% if activity.open %>
                              <div class="btn btn-default btn-circle"></div>
                            <% else %>
                              <div class="btn btn-default btn-circle btn-warning"></div>
                            <% end %>
                            <br>
                          <%= activity.bookings.count %> / <%= activity.number_of_players %>
                        <% end %>
                          <br>
                      </div>
                      <div class="col-sm-4 text-center">
                        <br>
                        <br>
                          <% @sport = activity.sport %>
                          <%= sport_picture(@sport) %>
                          <%= link_to group_user_path(@group, activity.captain) do %>
                            <%= activity.captain.name %>
                          <% end %>
                      </div>


                    </div>
                     <div class="text-center">
                        <% if activity.user_booked?(current_user) %>
                          <%= button_to "Je defly", group_activity_booking_path(@group, activity, activity.bookings), method: :delete %>
                        <% elsif activity.full? %>
                          <p> Complet, mais reste la si desistement il y a ! </p>
                        <% else %>
                          <%= button_to "Je fly", group_activity_bookings_path(@group, activity) %>
                        <% end %>
                    </div>
                  </div>

              <% end %>
            <% end %>
          </div>
        </div>
        <br>
        <div id="map" style="width: 100%; height: 300px;"></div>
          <% content_for(:after_js) do %>
            <%= javascript_tag do %>
              $(document).on('ready', function() {
                handler = Gmaps.build('Google');
                handler.buildMap({
                  internal: { id: 'map' },
                  provider: { scrollwheel: false }},
                function(){
                  markers = handler.addMarkers(<%= raw @hash.to_json %>);
                  handler.bounds.extendWith(markers);
                  handler.fitMapToBounds();
                });
              })
            <% end %>
          <% end %>
        <!--/panel-body-->
      </div><!--/panel-->
      <!--/end right column-->
    </div>
