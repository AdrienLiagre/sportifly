<%= simple_form_for([:group, @activity], html: { multipart: true }) do |f| %>
  <%= f.error_notification %>
  <div class="container">
    <div class="row">`
      <div class="col-sm-4 col-sm-offset-4">

      <%= f.input :name %>
      <%= f.association :sport %>
      <%= f.association :location %>
      <%= f.input :description %>
      <%= f.input :open %>


      <%= f.button :submit %>
      </div>
    </div>
  </div>
<% end %>




